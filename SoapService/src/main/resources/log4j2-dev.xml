<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">

    <Properties>
        <Property name="LOG_PATTERN">[%d{HH:mm:ss.SSS}] [%t] %-5level %logger{36} - %msg%n</Property>
    </Properties>

    <Appenders>
        <Console name="LogToConsole" target="SYSTEM_OUT" additivity="true">
            <PatternLayout pattern="${LOG_PATTERN}"/>
        </Console>
    </Appenders>

    <Loggers>

        <Logger name= "com.divanov.mathwebservice.service" level="debug" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>

        <Logger name= "com.divanov.mathwebservice.endpoint" level="debug" additivity="false">
            <AppenderRef ref="LogToConsole"/>
        </Logger>

        <Root level="debug">
            <AppenderRef ref="LogToConsole"/>
        </Root>

    </Loggers>

</Configuration>